<div id="header">

    <div class="header-dark">
        <nav class="navbar navbar-dark navbar-expand-md navigation-clean-search">
            <div class="header_logo" style="display:flex;align-items: center;">
                <a href="/">
                    <img id="headerLogoImg" src="/images/logoSinFondo2-min.png" />
                </a>
                <a href="/" class="navbar-brand">
                    <p style="padding-left: 15px;" id="companyName"> Naquadriah Software</p>
                </a>
            </div>
            <div class="container">

                <button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1"><span
                        class="sr-only">Toggle
                        navigation</span><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navcol-1">
                    <ul class="nav navbar-nav">
                        <li class="nav-item" role="presentation"><a class="nav-link" href="#agregarConsultas">Agregar
                                consultas</a></li>
                        <li><a class="nav-link" href="#misConsultas">Mis consultas </a>
                        </li>

                        <li class="nav-item" role="presentation"><a class="nav-link"
                                href="#ultEjecuciones">Ejecuciones</a></li>
                    </ul>
                    <a id="botonLogin" class="btn btn-light action-button" role="button"
                        style="background-color: rgba(255, 75, 90, 0.5)"
                        onclick="document.getElementById('id02').style.display='block'">Ingresar</a>
                    <h3 id="msgNombreLogueado" style="display:none;">Nombre</h1>
                        <label class="logoutLblPos">
                            <input name="submit2" type="submit" id="botonLogout" value="Salir"
                                style="background-color: rgba(255, 75, 90, 0.5)" class="btn btn-light action-button"
                                onclick="logOut()">
                        </label>
                </div>
            </div>
        </nav>

    </div>
</div>

<div id="id02" class="modal" style="display:none;">

    <div id="modalLoginNotificationApp" class="modal-content animate">
        <div class="imgcontainer">
            <span onclick="document.getElementById('id02').style.display='none'" class="close" title="Close Modal"
                style="color: white;">&times;</span>
            <p style="font-weight: bold;
            font-size: 30px; ">Iniciar sesión
            </p>
        </div>

        <div class="container">
            <div class="wrap-input100 validate-input" data-validate="Usuario válido requerido">
                <span class="label-input100">Usuario</span>
                <input id="nameLoginField" class="input100" type="text" name="nameLogin" placeholder="Ingrese usuario"
                    required>
                <span class="focus-input100"></span>
            </div>
            <div class="wrap-input100 validate-input" data-validate="Contraseña válida requerida">
                <span class="label-input100">Contraseña</span>
                <input id="passLoginField" class="input100" type="password" name="passLoginField"
                    placeholder="Ingrese contraseña">
                <span class="focus-input100"></span>
            </div>
            <label id="validCredential" style="color: red; display: none;"><b>Usuario/contraseña
                    incorrectas.</b></label>
            <label id="validCredentialLastname" style="color: red; display: none;"><b>Su usuario no está habilitado para
                    usar esta web.</b></label>

            <div style="text-align:right ">
                <button onclick="iniciarSesion()" class="contact100-form-btn" style="display: revert;">
                    <span>
                        Iniciar sesión
                        <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>

